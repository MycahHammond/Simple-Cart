<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleCart" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/night_gren</item>
        <item name="colorOnPrimary">@color/baby_powder</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_pigment</item>
        <item name="colorSecondaryVariant">@color/red_dark</item>
        <item name="colorOnSecondary">@color/baby_powder</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>

        <!-- Customize your theme here. -->
    </style>
</resources>